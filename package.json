{
    "name": "@geordiep/h_tlrouter",
    "version": "1.0.0",
    "author": "Geordie P [github/GeordieP] <gp@gpow.ca>",
    "license": "MIT",
    "description": "Tiny higher-order app providing top-level routing for Hyperapp",
    "main": "dist/main.js",
    "module": "src/main.js",
    "files": [
        "src",
        "dist"
    ],
    "scripts": {
        "start": "npm run dev",
        "dev": "webpack-dev-server --mode development --hot --inline --watch --config ./test/test-app/webpack.testapp.js",
        "test": "jest",
        "build": "webpack --mode production --config ./webpack.prod.js",
        "release": "npm run build && npm test && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish"
    },
    "babel": {
        "plugins": [
            [
                "transform-react-jsx",
                {
                    "pragma": "h"
                }
            ]
        ]
    },
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.4",
        "babel-plugin-transform-react-jsx": "^6.24.1",
        "babel-preset-env": "^1.6.1",
        "hyperapp": "^1.2.5",
        "jest": "^22.4.3",
        "webpack": "^4.4.1",
        "webpack-cli": "^2.0.13",
        "webpack-dev-server": "^3.1.1"
    },
    "dependencies": {},
    "peerDependencies": {
        "hyperapp": "^1.2"
    }
}
